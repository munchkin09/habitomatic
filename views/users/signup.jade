extends ../layout.jade
block content
   div#form
      div.row
          div.col-xs-12.col-sm-12.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
             h1.text-center.login Darse de alta!
             form(class='form-signup', action='/auth/signup', method='POST')
                input(type='text', name='username' class='form-control', placeholder='Nombre de usuario',required, autofocus)
                input(type='password',id='pass', name='password', class='form-control', placeholder='Contraseña', required)
                input(type='password',id='vPass', name='v_pass', class='form-control', placeholder='La contraseña otra vez', required)
                button(class='btn btn-lg btn-primary btn-block', type='submit', value='Dar de alta') Create New Account
                span.clearfix    
      if message
        h1#message.text-center.error-message #{message}
   script(type='text/javascript').
      $(document).ready(function()
      {
         $("#pass").focusout( function(){
            if (  ($("#pass").val() != $("#vPass").val()) && ($("#vPass").val() != "") )
            {
               $("#warning").show()
            } else {
               $("#warning").hide()
            }
         });
         $("#vPass").focusout( function(){
            if ($("#pass").val() != $("#vPass").val())
            {
               $("#warning").show()
            } else {
               $("#warning").hide()
            }
         });
      });
